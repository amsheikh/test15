<odoo>
  <record id="product_minimum_maximum_form" model="ir.ui.view">
      <field name="name">product.template.minimum_maximum</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="type">form</field>
      <field name="arch" type="xml">
         <xpath expr="//div[@name='pricing']" position="after">
            <!-- <field name=""/> -->
            <field name="minimum_price" attrs="{'invisible': [('detailed_type', '!=', 'product')]}"/>
          </xpath>
      </field>
  </record>
</odoo>